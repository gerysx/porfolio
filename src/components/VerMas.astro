---
const { href } = Astro.props;
---

<a
  target="_blank"
  href={href}
  role="link"
  class="inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-gray-700 transition border border-transparent rounded-lg dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 hover:underline focus:outline-none focus:ring focus:ring-yellow-500/70"
>
  <slot />
</a>
